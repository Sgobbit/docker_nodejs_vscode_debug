{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker node debug",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "protocol": "inspector",
            "timeout": 60000,
            "preLaunchTask": "start-debug-container",
            "postDebugTask": "end-debug-container",
        }
    ]
}